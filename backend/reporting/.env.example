# Reporting Service Environment Variables
# Copy this to .env and update with actual values
# DO NOT commit secrets to version control

# Server Configuration
PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Database Configuration (REQUIRED)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=financeiro
DB_USER=app
DB_PASSWORD=change-me-in-production
DB_MAX_CONNECTIONS=20

# Database SSL Configuration (optional, production recommended)
DB_SSL=false
DB_SSL_MODE=prefer
DB_SSL_CERT_PATH=

# JWT Authentication (T012)
JWT_SECRET=your-secret-key-min-32-chars-change-in-production!!!
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-change-in-production!!!
JWT_ACCESS_TOKEN_EXPIRY=900000
JWT_REFRESH_TOKEN_EXPIRY=604800000

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=DEBUG

# GraphQL Configuration
SPRING_GRAPHQL_GRAPHIQL_ENABLED=true

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,prometheus
